Summary: BRLCAD
Name: @PACKAGE@
Version: @VERSION@
Release: 1
Copyright: ...
Vendor: AMSRC-SL-BE (ACST)
Url: http://ftp.arl.army.mil/brlcad
Group: Productivity/Graphics/CAD
Source0: http://ftp.arl.army.mil/brlcad/@PACKAGE@-@VERSION@.tar.gz
Buildroot: /var/tmp/redhat/BUILD/@PACKAGE@

%description

%prep
%setup -q
%build
CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=/usr

make

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/usr/bin
mkdir -p $RPM_BUILD_ROOT/usr/share/@PACKAGE@
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
/usr/bin/@PACKAGE@
/usr/share/@PACKAGE@/*

%changelog

