/*
  *			fb/Cakefile
 */

#define SRCDIR	fb
#define PRODUCTS	\
	bw-fb cat-fb cell-fb cmap-fb fbgammamod \
	fb-bw fb-cmap fb-fb fb-orle fb-pix fb-rle \
	fbanim fbcbars fbclear fbcmap fbcmrot fbcolor \
	fbfade fbframe fbfree fbgamma fbgrid fbhelp \
	fblabel fbline fbpoint fbscanplot fbstretch fbzoom \
	gif-fb gif2fb orle-fb pix-fb pixflip-fb \
	pl-fb polar-fb pp-fb rle-fb spm-fb pixautosize

#define	SRCSUFF	.c
#define MANSECTION	1

#include "../Cakefile.defs"
#include "../Cakefile.prog"

/* Explicit composition of each product */

fbanim:		fbanim.o LIBFB_DEP
	CC LDFLAGS -o fbanim fbanim.o LIBFB LIBFB_LIBES LIBES

pl-fb:		pl-fb.o LIBFB_DEP LIBBU_DEP LIBBN_DEP
	CC LDFLAGS -o pl-fb pl-fb.o LIBFB LIBFB_LIBES LIBBN LIBBU LIBBU_LIBES LIBES

fbcbars:	fbcbars.o LIBFB_DEP
	CC LDFLAGS -o fbcbars fbcbars.o LIBFB LIBFB_LIBES LIBES

pix-fb:		pix-fb.o LIBFB_DEP LIBRT_DEP LIBBU_DEP LIBBN_DEP
	CC LDFLAGS -o pix-fb pix-fb.o LIBFB LIBFB_LIBES LIBRT LIBBU LIBBU_LIBES LIBBN LIBES

fb-pix:		fb-pix.o cmap-crunch.o LIBFB_DEP
	CC LDFLAGS -o fb-pix fb-pix.o cmap-crunch.o LIBFB LIBFB_LIBES LIBES

fb-fb:		fb-fb.o LIBFB_DEP
	CC LDFLAGS -o fb-fb fb-fb.o LIBFB LIBFB_LIBES LIBES

pixflip-fb:	pixflip-fb.o LIBFB_DEP
	CC LDFLAGS -o pixflip-fb pixflip-fb.o LIBFB LIBFB_LIBES LIBES

pp-fb:		pp-fb.o LIBFB_DEP LIBTERMIO_DEP
	CC LDFLAGS -o pp-fb pp-fb.o LIBFB LIBFB_LIBES LIBTERMIO LIBES

fbclear:	fbclear.o LIBFB_DEP
	CC LDFLAGS -o fbclear fbclear.o LIBFB LIBFB_LIBES LIBES

fbfree:	fbfree.o LIBFB_DEP
	CC LDFLAGS -o fbfree fbfree.o LIBFB LIBFB_LIBES LIBES

fbhelp:	fbhelp.o LIBFB_DEP
	CC LDFLAGS -o fbhelp fbhelp.o LIBFB LIBFB_LIBES LIBES

fbgrid:		fbgrid.o LIBFB_DEP
	CC LDFLAGS -o fbgrid fbgrid.o LIBFB LIBFB_LIBES LIBES

pixautosize:	pixautosize.o LIBFB_DEP LIBRT_DEP LIBBN_DEP LIBBU_DEP
	CC LDFLAGS -o pixautosize pixautosize.o LIBFB LIBFB_LIBES LIBRT LIBBN LIBBU LIBBU_LIBES LIBES

/* Old RLE Programs (Utah format Edition 2) */

orle-fb:	orle-fb.o LIBFB_DEP LIBORLE_DEP
	CC LDFLAGS -o orle-fb orle-fb.o LIBFB LIBFB_LIBES LIBORLE LIBES

fb-orle:	fb-orle.o cmap-crunch.o LIBFB_DEP LIBORLE_DEP
	CC LDFLAGS -o fb-orle fb-orle.o cmap-crunch.o LIBFB LIBFB_LIBES LIBORLE LIBES

/* New RLE Programs (Utah format Edition 3) -- matches Utah Raster Toolkit */

/*** oldtonewrle.c ? */

rle-fb:		rle-fb.o LIBFB_DEP LIBRLE_DEP
	CC LDFLAGS -o rle-fb rle-fb.o LIBFB LIBFB_LIBES LIBRLE LIBES

