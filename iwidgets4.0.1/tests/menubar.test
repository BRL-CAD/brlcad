	{ .view.more -label {} {}  }
	{ .view.more -state normal normal }
	{ .view.more -underline -1 -1 }
	{ .view.more -helpstr {} {} }
	} {
		set index  [lindex $test 0]
		set option [lindex $test 1]
		test Menubar-2.$o "tab configuration options, $option" {
			.mb menuconfigure $index $option [lindex $test 2] 
