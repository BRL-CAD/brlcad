	CC CFLAGS -c vers.c
	CC LDFLAGS RTDUMMY_OBJ vers.o LIBRT LIBRT_LIBES LIBFB LIBFB_LIBES LIBMALLOC LIBES -o rtdummy

rtexample:	rtexample.o
	CC LDFLAGS rtexample.o LIBRT LIBRT_LIBES LIBFB LIBFB_LIBES LIBMALLOC LIBES -o rtexample

rtregis:	rtregis.o read-rtlog.o
	CC LDFLAGS rtregis.o read-rtlog.o LIBRT LIBRT_LIBES LIBMALLOC LIBES -o rtregis

rtscale:	rtscale.o read-rtlog.o
	CC LDFLAGS rtscale.o read-rtlog.o LIBRT LIBRT_LIBES LIBWDB LIBPLOT LIBMALLOC LIBES -o rtscale

#include "../Cakefile.rules"
