	CC CFLAGS -c vers.c
	CC LDFLAGS RTFRAC_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtfrac

#define RTRANGE_OBJ	RTUIF viewrange.o

rtrange:	RTRANGE_OBJ
	sh ../newvers.sh version "RT Range Plot"
