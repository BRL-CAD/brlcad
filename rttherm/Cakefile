/*
 *			rt/Cakefile
 *
 *  $Header$
 */
#define CONFIGDEFS	RT_CONFIG

#define SRCDIR	rt
#define PRODUCTS	rt rtrad rtpp rtray rtshot rtwalk rtcheck \
			rtg3 rtcell rtxray rthide rtfrac rtrange \
			rtregis rtscale
#define	SRCSUFF	.c
#define MANSECTION	1

#include "../Cakefile.defs"
#include "../Cakefile.prog"

/* light.h material.h mathtab.h rad.h rdebug.h */
#define FILES	\
	rtshot \
	main opt do worker \
	view viewpp viewray viewrad viewcheck viewg3 \
	shade sh_text sh_cloud mathtab \
	material refract sh_stack \
	sh_plastic sh_cook wray sh_spm sh_light \
	sh_marble sh_stxt sh_points sh_toyota

/*  The "top-half" (user interface) for the RT family of programs */
#define RTUIF	main.o opt.o do.o worker.o mathtab.o

/* Explicit composition of each product */

#define	RT_OBJ	RTUIF view.o wray.o material.o refract.o \
		shade.o sh_text.o sh_cloud.o sh_stack.o sh_plastic.o \
		sh_cook.o sh_spm.o sh_light.o sh_marble.o \
		sh_stxt.o sh_points.o sh_toyota.o

rt:	RT_OBJ
	sh ../newvers.sh version "Ray-Tracer"
	CC CFLAGS -c vers.c
	CC LDFLAGS RT_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rt


#define RTRAY_OBJ	RTUIF viewray.o wray.o

rtray:	RTRAY_OBJ
	sh ../newvers.sh version "RT Ray"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTRAY_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtray

#define RTPP_OBJ	RTUIF viewpp.o

rtpp:	RTPP_OBJ
	sh ../newvers.sh version "RT pretty-picture"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTPP_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtpp

#define RTXRAY_OBJ	RTUIF viewxray.o

rtxray:	RTXRAY_OBJ
	sh ../newvers.sh version "RT X-Ray"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTXRAY_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtxray

#define RTRAD_OBJ	RTUIF viewrad.o

rtrad:	RTRAD_OBJ
	sh ../newvers.sh version "RT Rad"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTRAD_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtrad

#define RTSCAT_OBJ	RTUIF viewscat.o

rtbscat: RTSCAT_OBJ
	sh ../newvers.sh version "RT BackScatter"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTSCAT_OBJ vers.o LIBRAD LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtbscat

#define RTCHECK_OBJ	RTUIF viewcheck.o

rtcheck: RTCHECK_OBJ
	sh ../newvers.sh version "RT Check"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTCHECK_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtcheck

rtshot:	rtshot.o
	CC LDFLAGS rtshot.o LIBRT LIBRT_LIBES LIBMALLOC LIBES -o rtshot

rtwalk:	rtwalk.o
	CC LDFLAGS rtwalk.o LIBRT LIBRT_LIBES LIBMALLOC LIBES -o rtwalk

#define RTG3_OBJ	RTUIF viewg3.o

rtg3:	RTG3_OBJ
	sh ../newvers.sh version "RTG3"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTG3_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rtg3

#define RTCELL_OBJ	RTUIF viewcell.o

rtcell:	RTCELL_OBJ
	sh ../newvers.sh version "RTCELL"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTCELL_OBJ vers.o LIBRT LIBRT_LIBES LIBFB LIBFB_LIBES LIBMALLOC LIBES -o rtcell

#define RTHIDE_OBJ	RTUIF viewhide.o

rthide:	RTHIDE_OBJ
	sh ../newvers.sh version "RT Hidden-Line Plot"
	CC CFLAGS -c vers.c
	CC LDFLAGS RTHIDE_OBJ vers.o LIBRT LIBFB LIBFB_LIBES LIBRT_LIBES LIBMALLOC LIBES -o rthide

