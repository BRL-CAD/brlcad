###
#
#  A wrapper for the "man" command that sets up the BRL-CAD directories
#  instead of requiring the user to specify them on the command line.
#
###

path_to_this="`dirname $0`"

if test $# -lt 1 ; then
	echo "Usage: $0 command"
	echo "  To obtain help about that command"
	exit 1
fi

PATH=$path_to_this:@BRLCAD_ROOT@/bin:/bin:/usr/bin:/usr/brlcad/bin ; export PATH

# Use MANPAGER, else use PAGER, else use "more" command.
MORE="more -s -f"
if test "$PAGER" != "" ; then
	MORE="${PAGER}"
fi
if test "${MANPAGER}" != "" ; then
	MORE="${MANPAGER}"
fi

# prefix is needed within 'mandir'
prefix="@prefix@"
datarootdir="@datarootdir@"

# Ensure that MANPATH is set and has BRL-CAD materials man dirs listed
# first.  check for 1) a run-time path override first, then 2) a
# compile-time path, then 3) a run-time relative path.  paths prepended.

# 3) run-time relative search paths
if test -d "${path_to_this}/../share/brlcad/@BRLCAD_VERSION@/man" ; then
    MANPATH="${path_to_this}/../share/brlcad/@BRLCAD_VERSION@/man:$MANPATH"
fi
if test -d "${path_to_this}/../man" ; then
    MANPATH="${path_to_this}/../man:$MANPATH"
fi

# 2) compile-time search paths
if test -d "@mandir@" ; then
    MANPATH="@mandir@:$MANPATH"
fi
if test "@datarootdir@/man" != "@mandir@" ; then
    if test -d "@datarootdir@/man" ; then
	MANPATH="@datarootdir@/man:$MANPATH"
    fi
fi

# 1) run-time override search paths
if test -d "@BRLCAD_DATA@/man" ; then
    MANPATH="@BRLCAD_DATA@/man:$MANPATH"
fi
if test "@BRLCAD_ROOT@/man" != "@BRLCAD_DATA@/man" ; then
    if test -d "@BRLCAD_ROOT@/man" ; then
	MANPATH="@BRLCAD_ROOT@/man:$MANPATH"
    fi
fi
if test "@BRLCAD_ROOT@/share/brlcad/@BRLCAD_VERSION@/man" != "@BRLCAD_DATA@/man" ; then
    if test -d "@BRLCAD_ROOT@/share/brlcad/@BRLCAD_VERSION@/man" ; then
	MANPATH="@BRLCAD_ROOT@/share/brlcad/@BRLCAD_VERSION@/man:$MANPATH"
    fi
fi

path_elements=`echo ${MANPATH} | sed 's/^://
				s/:://g
				s/:$//
				s/:\\.:/:/g
				s/:/ /g'`

for dir in ${path_elements} ; do
	pattern="${dir}/man?/$1.?*"
	try=`eval echo ${pattern}`
	if test "${try}" != "${pattern}" ; then
		# Found something(s), format it/them
		echo ${try}
		man ${try}
		if test "x$?" = "x0" ; then
		    break
		fi
	fi
done

exit 0

