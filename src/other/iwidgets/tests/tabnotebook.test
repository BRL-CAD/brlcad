    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add -label Never} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
	{{.tn add -label "Hello World" -disabledforeground gray} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
