		{0}}
    {{.tn select 0} 
		{0}}
    {{.tn select select} 
		{}}
    {{.tn select end} 
		{[0-9]+}}
    {{.tn select "Hello World"} 
		{[0-9]+}}
    {{.tn insert 0} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn insert select -label "An Insert"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn insert end -label "Next To Last"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
