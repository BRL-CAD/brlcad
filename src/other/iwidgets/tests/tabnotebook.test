    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn delete 0 end} 
		{}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn select 2} 
		{[-]*[0-9]+}}
    {{.tn delete select end} 
		{}}
    {{.tn delete 0 end} 
		{}}
    {{.tn add -label "First Page"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add -label "Second Page"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add -label "Third Page"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
    {{.tn add -label "Fourth Page"} 
		{[.]tn[.]canvas[.]notebook[.]cs[.]page[0-9]+[.]cs}}
