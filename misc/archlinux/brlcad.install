# arg 1:  the new package version
post_install() {
  pre_remove
}

post_upgrade() {
  pre_remove
}

# arg 1:  the old package version
pre_remove() {
  cat etc/ld.so.conf | grep -v '/opt/brlcad/lib' >/tmp/.pacbrlcad
  mv /tmp/.pacbrlcad etc/ld.so.conf
  chmod 644 etc/ld.so.conf
  sbin/ldconfig -r .
}
