			color_scheme vparse share bodyio

/*#define USING_NEW_SO*/
#include "../Cakefile.defs"
#include "../Cakefile.prog"

#if HAS_TCP
#    define COMPLETE_LIBES	\
	LIBFB LIBPKG LIBWDB LIBRT LIBBN LIBBU LIBBU_LIBES LIBTERMIO MGED_LIBES LIBES
#    define	TCP_FILES	vrlink
#else
#    define COMPLETE_LIBES	\
	LIBFB LIBWDB LIBRT LIBBN LIBBU LIBBU_LIBES LIBTERMIO MGED_LIBES LIBES
#    define	TCP_FILES	/**/
#endif

mged:	OBJ LIBRT_DEP LIBBN_DEP LIBBU_DEP LIBWDB_DEP LIBTCL_DEP LIBTK_DEP LIBDM_DEP LIBFB_DEP
	sh ../sh/newvers.sh version "Geometry Editor (MGED)"
	CC CFLAGS -c vers.c
	CC -o mged LDFLAGS OBJ COMPLETE_LIBES vers.o

cad_boundp: cad_boundp.o LIBBU_DEP
	CC -o cad_boundp LDFLAGS cad_boundp.o LIBBU LIBBU_LIBES LIBES

cad_parea: cad_parea.o LIBBU_DEP
	CC -o cad_parea LDFLAGS cad_parea.o LIBBU LIBBU_LIBES LIBES

#include "../Cakefile.rules"
