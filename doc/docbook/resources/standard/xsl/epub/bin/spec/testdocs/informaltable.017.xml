<para>Row valign test.</para>

  <informaltable frame="all" id="informaltable">
    <tgroup cols="2">
      <tbody>
        <row valign="top">
          <entry>
            <para>Para one.</para>
            <para>Para two.</para>
          </entry>
          <entry>Top align me.</entry>
        </row>
        <row valign="middle">
          <entry>
            <para>Para one.</para>
            <para>Para two.</para>
          </entry>
          <entry>Middle align me.</entry>
        </row>
        <row valign="bottom">
          <entry>
            <para>Para one.</para>
            <para>Para two.</para>
          </entry>
          <entry>Bottom align me.</entry>
        </row>
      </tbody>
    </tgroup>
  </informaltable>

