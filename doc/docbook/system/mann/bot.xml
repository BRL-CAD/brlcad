<refentry xmlns="http://docbook.org/ns/docbook" version="5.0" xml:id="bot_split">
  <refmeta>
    <refentrytitle>BOT</refentrytitle>
    <manvolnum>nged</manvolnum>
    <refmiscinfo class="source">BRL-CAD</refmiscinfo>
    <refmiscinfo class="manual">BRL-CAD User Commands</refmiscinfo>
  </refmeta>

  <refnamediv xml:id="name">
    <refname>bot</refname>
    <refpurpose>
      Perform operations on a Bag of Triangles (BoT) primitive.
    </refpurpose>
  </refnamediv>

  <!-- body begins here -->
  <refsynopsisdiv xml:id="synopsis">
    <cmdsynopsis sepchar=" ">
      <command>bot</command>
      <arg rep="norepeat">subcommand</arg>
      <arg rep="norepeat">options</arg>
    </cmdsynopsis>
    <variablelist>
      <varlistentry><term></term><listitem>
      <cmdsynopsis sepchar=" ">
	<command>get</command>
	<group choice="req" rep="norepeat">
	  <arg choice="plain">faces</arg>
	  <arg choice="plain">minEdge</arg>
	  <arg choice="plain">maxEdge</arg>
	  <arg choice="plain">orientation</arg>
	  <arg choice="plain">type</arg>
	  <arg choice="plain">vertices</arg>
	</group>
	<arg choice="req" rep="norepeat">input_bot</arg>
      </cmdsynopsis>
      </listitem></varlistentry>
      <varlistentry><term></term><listitem>
      <cmdsynopsis sepchar=" ">
	<command>chull</command>
	<arg choice="req" rep="norepeat">input_bot</arg>
	<arg choice="req" rep="norepeat">output_bot</arg>
      </cmdsynopsis>
      </listitem></varlistentry>
            <varlistentry><term></term><listitem>
      <cmdsynopsis sepchar=" ">
	<command>solid</command>
	<arg choice="req" rep="norepeat">input_bot</arg>
      </cmdsynopsis>
      </listitem></varlistentry>
    </variablelist>
  </refsynopsisdiv>

  <refsection xml:id="description"><title>DESCRIPTION</title>
  <para>The <command>bot</command> command.</para>
