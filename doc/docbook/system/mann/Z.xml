  <refnamediv xml:id="name">
    <refname>Z</refname>
    <refpurpose>Clear the <emphasis>mged</emphasis> display.
    </refpurpose>
  </refnamediv>

  <!-- body begins here -->
  <refsynopsisdiv xml:id="synopsis">
    <cmdsynopsis sepchar=" ">
      <command>Z</command>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsection xml:id="description"><title>DESCRIPTION</title>

    <para>
      Zap (i.e., clear) the <emphasis>mged</emphasis> display.
    </para>
  </refsection>

  <refsection xml:id="examples"><title>EXAMPLES</title>

    <para>
      Clear the <emphasis>mged</emphasis> display.
    </para>
    <example><title>Enter <command>Z</command> to clear the <emphasis>mged</emphasis> display.
      </title>

      <variablelist>
	<varlistentry>
	  <term><prompt>mged&gt;</prompt> <userinput>Z</userinput></term>
	  <listitem>
	    <para>The <emphasis>mged</emphasis> display is clear.
	    </para>
	  </listitem>
	</varlistentry>
      </variablelist>
    </example>
  </refsection>

