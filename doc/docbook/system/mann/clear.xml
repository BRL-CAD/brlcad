  <refnamediv xml:id="name">
    <refname>clear</refname>
    <refpurpose>Clear the <emphasis>mged</emphasis> command window.
    </refpurpose>
  </refnamediv>

  <!-- body begins here -->
  <refsynopsisdiv xml:id="synopsis">
    <cmdsynopsis sepchar=" ">
      <command>clear</command>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsection xml:id="description"><title>DESCRIPTION</title>

    <para>
      Clear the <emphasis>mged</emphasis> command window.
    </para>
  </refsection>

  <refsection xml:id="examples"><title>EXAMPLES</title>

    <para>
      Clear the <emphasis>mged</emphasis> command window.
    </para>
    <example><title>Enter <command>clear</command> to clear the <emphasis>mged</emphasis> command window.
      </title>

      <variablelist>
	<varlistentry>
	  <term><prompt>mged&gt; </prompt><userinput>clear</userinput></term>
	  <listitem>
	    <para>The <emphasis>mged</emphasis> command window is clear.
	    </para>
	  </listitem>
	</varlistentry>
      </variablelist>
    </example>
  </refsection>

