execute_process(COMMAND "@XMLLINT_EXECUTABLE@"  --xinclude --schema @BRLCAD_SOURCE_DIR@/doc/docbook/resources/other/docbook-schema/xsd/docbook.xsd --noout --nonet @CMAKE_CURRENT_SOURCE_DIR@/@filename@ RESULT_VARIABLE CMDRESULT)
