/*
 *			rt/Cakefile
 *
 *  $Header$
 */
#define CONFIGDEFS	RT_CONFIG

#define SRCDIR	rt
#define PRODUCTS	rt rtrad rtpp rtray rtshot rtwalk rtcheck \
			rtg3 rtcell rtxray rthide rtfrac rtrange \
			rtregis rtscale rtsil rtweight rtedge rt_simple rtarea \
			rt_bot_faces
#define	SRCSUFF	.c
#define MANSECTION	1

#include "../Cakefile.defs"
#include "../Cakefile.prog"

/* light.h material.h mathtab.h rad.h rdebug.h */
#define FILES	\
	rtshot \
	main opt do worker \
	view viewpp viewray viewrad viewcheck viewg3

/*  The "top-half" (user interface) for the RT family of programs */
#define RTUIF	main.o opt.o do.o worker.o

/* Explicit composition of each product */

#define	RT_OBJ	RTUIF view.o 


rt:	RT_OBJ LIBOPTICAL_DEP LIBRT_DEP LIBBN_DEP LIBBU_DEP LIBFB_DEP 
	newvers.sh version "The BRL-CAD Ray-Tracer RT"
	CC CFLAGS -c vers.c
	CC LDFLAGS RT_OBJ vers.o LIBOPTICAL LIBRT LIBBN LIBFB LIBFB_LIBES LIBBU LIBBU_LIBES LIBES -o rt

#define RT_BOT_FACES_OBJ	RTUIF view_bot_faces.o

rt_bot_faces:	RT_BOT_FACES_OBJ LIBOPTICAL_DEP LIBRT_DEP LIBBN_DEP LIBBU_DEP LIBFB_DEP
	newvers.sh version "RT BOT FACES"
	CC CFLAGS -c vers.c
	CC LDFLAGS RT_BOT_FACES_OBJ vers.o LIBOPTICAL LIBRT LIBBN LIBFB LIBFB_LIBES LIBBU LIBBU_LIBES LIBES -o rt_bot_faces

#define RTRAY_OBJ	RTUIF viewray.o

